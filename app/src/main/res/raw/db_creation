CREATE TABLE RecentSearch (
    _id	INTEGER PRIMARY KEY AUTOINCREMENT,
    isText INT NOT NULL,
    textSearch TEXT,
    longitud DOUBLE,
    latitud DOUBLE,
    radio INT
);

CREATE TABLE User(
    _id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT,
    apellidos TEXT,
    profileImage BLOB,
    email TEXT UNIQUE,
    sexo CHAR,
    password TEXT,
    description TEXT
);

CREATE TABLE FavoritePlace(
    user_id INTEGER,
    name TEXT,
    type TEXT,
    latitude DOUBLE,
    longitude DOUBLE,
    address TEXT,
    openingHour TEXT,
    closingHour TEXT,
    rating DOUBLE,
    description TEXT
);